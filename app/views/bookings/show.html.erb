<h1>Details</h1>

<div class="card text-center">
  <div class="card-header">
    Details
  </div>
  <div class="card-body">
    <h5 class="card-title"><%= @booking.booking_start %> - <%= @booking.booking_end %></h5>
    <p class="card-text"><%= @booking.bike.brand %></p>
    <p class="card-text"><%= @booking.total_price %></p>
    <%#=Not sure of the path %>
    <a href="/bookings/:id/edit" class="btn btn-primary">Edit this booking</a>
  </div>
  <div class="card-footer text-muted">
    <p class="card-text"><%= @booking.status %></p>
  </div>
</div>
