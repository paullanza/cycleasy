<h1>Details on <%= @booking.bike.brand %> - <%= @booking.bike.category %></h1>

<div class="card text-center">
  <div class="card-header">
    STATUS : <%= @booking.status %>
  </div>
  <div class="card-body">
    <h5 class="card-title">DATES : <%= @booking.booking_start %> - <%= @booking.booking_end %></h5>
    <p class="card-text"><%= @booking.bike.brand %></p>
    <p class="card-text"><%= @booking.bike.category %></p>
    <p class="card-text"><%= @booking.bike.description %></p>
    <p class="card-text">Total price : <%= @booking.total_price %> $</p>
    <%#=Not sure of the path %>
    <%= link_to 'Edit', edit_booking_path(@booking), class:"btn btn-info" %>
    <%= link_to "Delete?", booking_path(@booking), class: "btn btn-info", method: :delete, data: { confirm: "Are you sure?" }  %>
    <%= link_to "My bookings", my_bookings_path, class: "btn btn-info" %>
  </div>
</div>
