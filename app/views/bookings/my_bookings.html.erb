<h2>My bookings:</h2>

<% if @bookings %>
  <ul>
    <% @bookings.each do |booking| %>
      <li><%= booking.bike.brand %> || <%= booking.booking_start %> ||
      <%= booking.booking_end %> || <%= booking.total_price %>
      <%= link_to "Delete?", booking_path(booking), method: :delete, data: { confirm: "Are you sure?" }  %>
      </li>
    <% end %>
  </ul>
<% end %>

<hr>

<h2>My Bikes Booked</h2>

<% if @my_bikes %>
  <ul>
    <% @my_bikes.each do |booking| %>
    <li><%= booking.bike.brand %> ||
    <%= booking.user.email %> ||
    Booked for:
    <%= booking.booking_start %> to
    <%= booking.booking_end %> -
     Status:
    <%= booking.status %>
    <% if booking.status == 'pending' %>
      <%= link_to 'Accept', accept_booking_path(booking), class: 'btn btn-info my-3' %>
      <%= link_to 'Decline', decline_booking_path(booking), class: 'btn btn-info' %>
    <% end %>
    </li>
  <% end %>
  </ul>
<% end %>
