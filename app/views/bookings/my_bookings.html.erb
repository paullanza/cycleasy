<h2>My bookings:</h2>


<div class="card w-150">
  <div class="card-body">
    <% if @bookings %>
      <ul>
        <% @bookings.each do |booking| %>
          <h5 class="card-title"><%= booking.bike.brand %></h5>
          <li><%= booking.booking_start %> ||
          <%= booking.booking_end %> || <%= booking.total_price %>
          <%= link_to "Delete?", booking_path(booking), class: "btn btn-info", method: :delete, data: { confirm: "Are you sure?" }  %>
          <%= link_to "Details", booking_path(booking), class:"btn btn-info" %>
          </li>
        <% end %>
    </ul>
   <% end %>
  </div>
</div>


<hr>

<h2>My Bikes Booked</h2>

<% if @bikes_bookings %>
  <ul>
    <% @bikes_bookings.each do |booking| %>
    <li><%= booking.bike.brand %> ||
    <%= booking.user.email %> ||
    Booked for:
    <%= booking.booking_start %> to
    <%= booking.booking_end %> -
     Status:
    <%= booking.status %>
    <% if booking.status == 'pending' %>
      <%= link_to 'Accept', accept_booking_path(booking), class: 'btn btn-info my-3' %>
      <%= link_to 'Decline', decline_booking_path(booking), class: 'btn btn-info my-3' %>
    <% end %>
    </li>
  <% end %>
  </ul>
<% end %>

