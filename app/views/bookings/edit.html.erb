  <div class="container mb-4">
      <div data-controller="bookings" class="form-wrapper" style="width: 400px; margin: 0 auto;">
        <h2>Change booking dates:</h2>

        <%= simple_form_for @booking do |f| %>
          <%= f.input :booking_start, as: :string, required: false, input_html: {class: "datepicker"} %>
          <%= f.input :booking_end, as: :string, required: false, input_html: {class: "datepicker"} %>
          <%= f.button :submit, "Book", class: "btn btn-info" %>
        <% end %>
      </div>
    </div>
