<h1>All Availables Bikes</h1>

<div class="container"  >
  <% if user_signed_in? %>
    <%= link_to "My Bikes", my_bikes_path, class: "btn btn-info" %>
  <% else %>
    <%= link_to "My Bikes", new_user_session_path, class: "btn btn-info" %>
  <% end %>
</div>

<div class="card mb-3">
  <div class="card-body">
    <ul>
      <% @bikes.each do |bike| %>
      <li>
        <%= link_to bike.brand, bike_path(bike) %>
        <%# need cloudivary image%>
        <h5 class="card-title">Descriptions: <%= bike.description %></h5>
        <p class="card-text">Price: <%= bike.price_per_day %> $</p>
        <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
        <% end %>
      <li>
    </ul>
  </div>
</div>
<div>
  <div style="width: 100%; height: 600px;"
  data-controller="mapbox"
  data-mapbox-markers-value="<%= @markers.to_json %>"
  data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
