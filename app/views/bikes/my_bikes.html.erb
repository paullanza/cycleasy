<h1>My bikes:</h1>


<ul>
  <% @bikes.each do |bike| %>
    <li>

      <div class="card mb-3" style="max-width: 540px;">
        <div class="row g-0">
          <div class="col-md-4">
            <img src="..." class="img-fluid rounded-start" alt="...">
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title">Card title</h5>
              <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
              <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
            </div>
          </div>
        </div>
      </div>
      <div class="card mb-3">
        <%#= Image from Cloudinary, need a key, need an if? %>
        <% if !bike.photo.key.nil? %>
          <%= cl_image_tag bike.photo.key, height: 150, width: 200, crop: :fill %>
        <% end %>
          <div class="card-body">
          <%= link_to bike.brand, bike_path(bike) %> -
          description:<%= bike.description %>
          <%= link_to 'Details', bike_path(bike) %>
          <% if bike.user == current_user %>
            <%= link_to "Edit", edit_bike_path(bike) %>
          <% end %>

          <% if bike.user == current_user %>
            <%= link_to "Delete", bike_path(bike),
            data: { confirm: "Are you sure you want to delete this bike?" },
            class: 'ms-3 text-danger' %>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
</ul>





<%= link_to 'Create a Bike', new_bike_path, class: 'btn btn-info' %>
