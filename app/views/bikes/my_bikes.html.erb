<div class="container d-flex justify-content-between p-0">
  <h1 class='mx-3 my-3 fw-bolder'> My Bikes:</h1>
  <div class='button mx-3 my-3'>
      <%= link_to 'Create a Bike', new_bike_path, class: 'btn btn-info', class: 'btn btn-info w-100 shadow-sm' %>
  </div>
</div>

<ul class="p-0">
    <% @bikes.each do |bike| %>
      <li class="container mt-3"  style="list-style: none;">
          <div class="mb-3 shadow">
            <div class="d-flex justify-content-between">
              <img class="position-fixed shadow" height=100%;>
                <% if bike.photo.attached? %>
                  <%= cl_image_tag bike.photo.key, width: 350, crop: :fill %>
                <% end %>
              <div class="p-1 my-3">
                <h2 class="text-center mb-2 mt-3"> <%= link_to bike.brand, bike_path(bike), class: "text-decoration-none text-dark text-uppercase fw-bolder"%></h2>
                <hr>
                <p class="mt-2"><strong>Description:</strong> <%= bike.description %></p>
                <p><%= bike.location %></p>

              </div>
              <div class ="d-flex flex-column align-items-center p-4 justify-content-around" >
                <%= link_to 'Details', bike_path(bike), class: "btn btn-info w-100 shadow-sm" %>

                <% if bike.user == current_user %>
                  <%= link_to "Edit", edit_bike_path(bike), class: 'btn btn-info w-100 shadow-sm' %>
                <% end %>

                <% if bike.user == current_user %>
                  <%= link_to "Delete", bike_path(bike),
                    method: :delete,
                    data: { confirm: "Are you sure you want to delete this bike?" },
                    class: 'ms-3 text-danger',  class: 'btn btn-danger w-100 shadow-sm'  %>
                <% end %>
              </div>
            </div>
          </div>
      </li>
    <% end %>

</ul>
