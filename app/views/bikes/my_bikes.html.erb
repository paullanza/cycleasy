<h1>My bikes:</h1>


<ul style="list-style: none;">
  <% @bikes.each do |bike| %>
    <li >
      <div class="card mb-3" style="max-width: 100%;" margin=50px >
        <div class="row g-0">

          <div class="col-md-4">
            <% if !bike.photo.key.nil? %>
              <%= cl_image_tag bike.photo.key, height: 180, width: 200, crop: :fill %>
            <% end %>
          </div>

          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title"><%= link_to bike.brand, bike_path(bike) %></h5>
              <p class="card-text"><%= bike.description %></p>
              <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
              <%= link_to 'Details', bike_path(bike) %>
              <% if bike.user == current_user %>
                <%= link_to "Edit", edit_bike_path(bike) %>
              <% end %>

          <% if bike.user == current_user %>
            <%= link_to "Delete", bike_path(bike),
            method: :delete,
            data: { confirm: "Are you sure you want to delete this bike?" },
            class: 'ms-3 text-danger' %>
          <% end %>

        </div>
      </div>
    </li>
  <% end %>
</ul>

<%= link_to 'Create a Bike', new_bike_path, class: 'btn btn-info' %>
