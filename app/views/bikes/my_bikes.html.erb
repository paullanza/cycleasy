<h1>My bikes:</h1>


<ul class="card my-3" width="500px" max-height style="list-style: none;">
  <div class="d-flex align-content-start flex-wrap">

    <% @bikes.each do |bike| %>
      <li>
        <div>

          <div  class="row " >

              <div class="card-img-left">
                <% if !bike.photo.key.nil? %>
                  <%= cl_image_tag bike.photo.key, height: 180, width: 200, crop: :fill %>
                <% end %>
              </div>

              <div class="col-sm-6" class="position:">
                <div class="card-body">
                  <h5 class="card-title"><%= link_to bike.brand, bike_path(bike) %></h5>
                  <p class="card-text"><%= bike.description %></p>
                  <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                </div>

                  <div>
                    <%= link_to 'Details', bike_path(bike), class: 'btn btn-info btn-sm float-right' %>

                    <% if bike.user == current_user %>
                      <%= link_to "Edit", edit_bike_path(bike), class: 'btn btn-info btn-sm float-right' %>
                    <% end %>

                    <% if bike.user == current_user %>
                      <%= link_to "Delete", bike_path(bike),
                        method: :delete,
                        data: { confirm: "Are you sure you want to delete this bike?" },
                        class: 'ms-3 text-danger',  class: 'btn btn-info btn-sm float-right'  %>
                    <% end %>
                  </div>
                </div>
            <div >

              </div>
            </div>
              </div>


          </div>
        </div>

      </li>
    <% end %>

  </div>
</ul>

<%= link_to 'Create a Bike', new_bike_path, class: 'btn btn-info' %>
